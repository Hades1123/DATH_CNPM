model OrderItem{
  id Int 
  order_id String
  product_id Int
  product_variant_id Int
  quantity Int
  price_per_item Int

  @@id(name: "item_id", [id,order_id])
  order Order @relation(fields: [order_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])

  variant ProductVariant @relation(fields: [product_variant_id,product_id], references: [id, product_id])
}